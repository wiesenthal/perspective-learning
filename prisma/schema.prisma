generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Perspective {
  id          String  @id
  name        String
  description String?

  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id String @id

  role          String
  content       String
  perspective   Perspective @relation(fields: [perspectiveId], references: [id])
  perspectiveId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
